{
	"name": "cz-vinyl",
	"version": "1.0.1",
	"description": "Commitizen adapter formatting commit messages using Vinyl Depository conventions.",
	"author": "Vinyl Depository <dev@vinyldepository.com> (https://www.vinyldepository.com)",
	"keywords": [
		"commitizen",
		"adapter",
		"emoji",
		"jira"
	],
	"contributors": [
		{
			"name": "tal-rofe",
			"email": "tal@vinyldepository.com"
		}
	],
	"license": "MIT",
	"homepage": "https://github.com/Vinyl-Depository/cz-vinyl",
	"bugs": {
		"url": "https://github.com/Vinyl-Depository/cz-vinyl/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vinyl-Depository/cz-vinyl.git"
	},
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"husky:install": "husky install",
		"git:config": "git config --local include.path ../.gitconfig",
		"prepare": "run-p husky:install git:config || exit 0",
		"build": "tsc --project ./tsconfig.build.json && tsc-alias --project ./tsconfig.build.json",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"format": "prettier --write \"**/*.{ts,tsx,scss,js,json}\"",
		"type-check": "tsc --project ./tsconfig.json",
		"lslint": "ls-lint",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"depcheck": "depcheck"
	},
	"dependencies": {
		"cosmiconfig": "7.0.1",
		"fuse.js": "6.5.3",
		"inquirer": "8.2.2",
		"inquirer-autocomplete-prompt": "2.0.0",
		"inquirer-maxlength-input-prompt": "1.0.2",
		"simple-git": "3.5.0",
		"word-wrap": "1.2.3"
	},
	"devDependencies": {
		"@commitlint/cli": "16.2.3",
		"@ls-lint/ls-lint": "1.11.0",
		"@types/inquirer": "8.2.1",
		"@types/inquirer-autocomplete-prompt": "1.3.4",
		"@types/jest": "27.4.1",
		"@types/sinon": "10.0.11",
		"@typescript-eslint/eslint-plugin": "5.18.0",
		"@typescript-eslint/parser": "5.18.0",
		"commitizen": "4.2.4",
		"depcheck": "1.4.3",
		"eslint": "8.12.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"husky": "7.0.4",
		"jest": "27.5.1",
		"lint-staged": "12.3.7",
		"npm-run-all": "4.1.5",
		"prettier": "2.6.2",
		"sinon": "13.0.1",
		"ts-jest": "27.1.4",
		"tsc-alias": "1.6.6",
		"typescript": "4.6.3"
	}
}
